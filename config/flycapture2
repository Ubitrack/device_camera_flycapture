# add configuration options
Import( '*' )

SConscript ( '#/config/libraryConfig.py' )
Import('standardLibFinder', 'standardLibConfig')

opts.Add( 'FLYCAPTURE2_PATH', 'Path to the flycapture2 library and header files' )

libName = "FLYCAPTURE2"


compileSettings =  [{} , "FlyCapture2.h", "C++"]
libFinder = standardLibFinder(libName,compileSettings)

configHelper = standardLibConfig(libName, libFinder)
have_flycapture2 = configHelper.haveLib()
flycapture2_options = configHelper.getLibraryOptions()

# export results
Export( [ 'have_flycapture2', 'flycapture2_options' ] )